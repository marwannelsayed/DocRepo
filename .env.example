# Environment Configuration Example
# Copy this file to .env and update the values

# Database configuration
DATABASE_URL=postgresql://username:password@localhost:5432/document_repository

# JWT settings
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File upload settings
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=10485760  # 10 MB in bytes

# Server configuration
HOST=127.0.0.1
PORT=8088

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# DocEx Classification API URL
DOCEX_API_URL=http://localhost:8000

# PostgreSQL Database (for Docker)
POSTGRES_DB=document_repository
POSTGRES_USER=docrepo_user
POSTGRES_PASSWORD=secure_password_change_this
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis (optional - for future caching)
REDIS_URL=redis://localhost:6379

# Email configuration (optional - for future notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
